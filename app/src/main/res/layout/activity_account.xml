<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_beijing"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.login.AccountBaseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        tools:ignore="UselessLeaf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@drawable/main_fanhui_w" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:paddingEnd="64dp"
            android:text="@string/settings_change_password"
            android:textColor="@color/text_content"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/login_logo"
            android:visibility="invisible" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_max"
            android:paddingTop="@dimen/padding_max"
            android:paddingRight="@dimen/padding_max">

            <LinearLayout
                android:id="@+id/ll_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <!-- 姓名 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_line_outside"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/height_line"
                            android:layout_weight="1"
                            android:background="@drawable/skin_line_bk">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/padding_inside"
                                android:paddingEnd="0dp"
                                android:text="@string/mark_name"
                                android:textColor="@color/text_content"

                                android:textSize="@dimen/size_content" />

                            <com.rejuvee.smartelectric.family.widget.ClearEditText
                                android:id="@+id/edit_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@null"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/padding_inside"
                                android:paddingRight="@dimen/padding_inside"
                                android:textColor="@color/skin_edt"
                                android:textColorHint="@color/text_content"
                                android:textSize="@dimen/size_content"
                                tools:ignore="NestedWeights" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/margin_line_inside"
                            android:scaleType="center"
                            android:src="@drawable/check_ok"
                            android:visibility="gone" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_wrong_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_message"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/padding_inside"
                        android:paddingEnd="0dp"
                        android:text="@string/hint_phone"
                        android:textColor="@color/skin_wrong_msg"
                        android:textSize="@dimen/size_message"
                        android:visibility="gone" />
                </LinearLayout>
                <!--身份证号-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_line_outside"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/height_line"
                            android:layout_weight="1"
                            android:background="@drawable/skin_line_bk">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/padding_inside"
                                android:paddingEnd="0dp"
                                android:text="@string/mark_id"
                                android:textColor="@color/text_content"

                                android:textSize="@dimen/size_content" />

                            <com.rejuvee.smartelectric.family.widget.ClearEditText
                                android:id="@+id/edit_id_number"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@null"
                                android:digits="@string/input_digits_id_number"
                                android:maxLength="18"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/padding_inside"
                                android:paddingRight="@dimen/padding_inside"
                                android:textColor="@color/skin_edt"
                                android:textColorHint="@color/text_content"
                                android:textSize="@dimen/size_content"
                                tools:ignore="NestedWeights" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img_id_number"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/margin_line_inside"
                            android:scaleType="center"
                            android:src="@drawable/check_ok"
                            android:visibility="gone" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_wrong_id_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_message"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/padding_inside"
                        android:paddingEnd="0dp"
                        android:text="@string/hint_phone"
                        android:textColor="@color/skin_wrong_msg"
                        android:textSize="@dimen/size_message"
                        android:visibility="gone" />
                </LinearLayout>
                <!--车架号-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_line_outside"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/height_line"
                            android:layout_weight="1"
                            android:background="@drawable/skin_line_bk">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/padding_inside"
                                android:paddingEnd="0dp"
                                android:text="@string/mark_address"
                                android:textColor="@color/text_content"

                                android:textSize="@dimen/size_content" />

                            <com.rejuvee.smartelectric.family.widget.ClearEditText
                                android:id="@+id/edit_frame"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@null"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/padding_inside"
                                android:paddingRight="@dimen/padding_inside"
                                android:textColor="@color/skin_edt"
                                android:textColorHint="@color/text_content"
                                android:textSize="@dimen/size_content"
                                tools:ignore="NestedWeights" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img_frame"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/margin_line_inside"
                            android:scaleType="center"
                            android:src="@drawable/check_ok"
                            android:visibility="gone" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_wrong_frame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_message"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/padding_inside"
                        android:paddingEnd="0dp"
                        android:text="@string/hint_phone"
                        android:textColor="@color/skin_wrong_msg"
                        android:textSize="@dimen/size_message"
                        android:visibility="gone" />
                </LinearLayout>
                <!--住址-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_line_outside"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/height_line"
                            android:layout_weight="1"
                            android:background="@drawable/skin_line_bk">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/padding_inside"
                                android:paddingEnd="0dp"
                                android:text="@string/mark_address"
                                android:textColor="@color/text_content"

                                android:textSize="@dimen/size_content" />

                            <com.rejuvee.smartelectric.family.widget.ClearEditText
                                android:id="@+id/edit_address"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@null"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/padding_inside"
                                android:paddingRight="@dimen/padding_inside"
                                android:textColor="@color/skin_edt"
                                android:textColorHint="@color/text_content"
                                android:textSize="@dimen/size_content"
                                tools:ignore="NestedWeights" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img_address"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/margin_line_inside"
                            android:scaleType="center"
                            android:src="@drawable/check_ok"
                            android:visibility="gone" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_wrong_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_message"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/padding_inside"
                        android:paddingEnd="0dp"
                        android:text="@string/hint_phone"
                        android:textColor="@color/skin_wrong_msg"
                        android:textSize="@dimen/size_message"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <!-- IMEI&原IMEI -->
            <LinearLayout
                android:id="@+id/ll_imei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_line_outside"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_line"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/skin_line_bk">

                        <TextView
                            android:id="@+id/txt_mark_imei"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/padding_inside"
                            android:paddingEnd="0dp"
                            android:text="@string/mark_imei"
                            android:textColor="@color/text_content"
                            android:textSize="@dimen/size_content" />

                        <com.rejuvee.smartelectric.family.widget.ClearEditText
                            android:id="@+id/edit_imei"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:digits="@string/input_digits"
                            android:hint="@string/hint_imei"
                            android:maxLength="12"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/padding_inside"
                            android:paddingRight="@dimen/padding_inside"
                            android:textColor="@color/text_content"
                            android:textColorHint="@color/text_content"
                            android:textSize="@dimen/size_content"
                            tools:ignore="NestedWeights" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_imei"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_line_inside"
                        android:scaleType="center"
                        android:src="@drawable/check_ok"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_wrong_imei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_message"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/padding_inside"
                    android:paddingEnd="0dp"
                    android:text="@string/hint_code"
                    android:textColor="@color/skin_wrong_msg"
                    android:textSize="@dimen/size_message"
                    android:visibility="gone" />
            </LinearLayout>
            <!-- 手机号&原手机号 -->
            <LinearLayout
                android:id="@+id/ll_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_line_outside"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_line"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/skin_line_bk">

                        <TextView
                            android:id="@+id/txt_mark_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/padding_inside"
                            android:paddingEnd="0dp"
                            android:text="@string/mark_phone"
                            android:textColor="@color/text_content"
                            android:textSize="@dimen/size_content" />

                        <com.rejuvee.smartelectric.family.widget.ClearEditText
                            android:id="@+id/edit_phone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:inputType="number"
                            android:maxLength="11"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/padding_inside"
                            android:paddingRight="@dimen/padding_inside"
                            android:textColor="@color/skin_edt"
                            android:textColorHint="@color/text_content"
                            android:textSize="@dimen/size_content"
                            tools:ignore="NestedWeights" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_line_inside"
                        android:scaleType="center"
                        android:src="@drawable/check_ok"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_wrong_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_message"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/padding_inside"
                    android:paddingEnd="0dp"
                    android:text="@string/hint_phone"
                    android:textColor="@color/skin_wrong_msg"
                    android:textSize="@dimen/size_message"
                    android:visibility="gone" />
            </LinearLayout>
            <!-- 新手机号 -->
            <LinearLayout
                android:id="@+id/ll_newphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_line_outside"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_line"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/skin_line_bk">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/padding_inside"
                            android:paddingEnd="0dp"
                            android:text="@string/mark_phone_new"
                            android:textColor="@color/text_content"

                            android:textSize="@dimen/size_content" />

                        <com.rejuvee.smartelectric.family.widget.ClearEditText
                            android:id="@+id/edit_phone_new"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:inputType="number"
                            android:maxLength="11"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/padding_inside"
                            android:paddingRight="@dimen/padding_inside"
                            android:textColor="@color/skin_edt"
                            android:textColorHint="@color/text_content"
                            android:textSize="@dimen/size_content"
                            tools:ignore="NestedWeights" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_phone_new"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_line_inside"
                        android:scaleType="center"
                        android:src="@drawable/check_ok"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_wrong_phone_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_message"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/padding_inside"
                    android:paddingEnd="0dp"
                    android:text="@string/hint_phone"
                    android:textColor="@color/skin_wrong_msg"
                    android:textSize="@dimen/size_message"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- 验证码 -->
            <LinearLayout
                android:id="@+id/ll_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_line_outside"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_line"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/skin_line_bk">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/padding_inside"
                            android:paddingEnd="0dp"
                            android:text="@string/mark_code"
                            android:textColor="@color/text_content"
                            android:textSize="@dimen/size_content" />

                        <com.rejuvee.smartelectric.family.widget.ClearEditText
                            android:id="@+id/edit_code"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:inputType="number"
                            android:maxLength="6"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/padding_inside"
                            android:paddingRight="@dimen/padding_inside"
                            android:textColor="@color/skin_edt"
                            android:textColorHint="@color/text_content"
                            android:textSize="@dimen/size_content"
                            tools:ignore="NestedWeights" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_code"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_line_inside"
                        android:scaleType="center"
                        android:src="@drawable/check_ok"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_code"
                        android:layout_width="@dimen/width_code"
                        android:layout_height="@dimen/height_line"
                        android:layout_marginStart="@dimen/margin_code"
                        android:background="@drawable/login_btn"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingLeft="@dimen/padding_inside"
                        android:paddingRight="@dimen/padding_inside"
                        android:text="@string/mark_getcode"
                        android:textColor="@color/skin_txt_code"
                        android:textSize="@dimen/size_message" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_wrong_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_message"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/padding_inside"
                    android:paddingEnd="0dp"
                    android:text="@string/hint_code"
                    android:textColor="@color/skin_wrong_msg"
                    android:textSize="@dimen/size_message"
                    android:visibility="gone" />
            </LinearLayout>
            <!-- 原始密码-->
            <LinearLayout
                android:id="@+id/ll_orgpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_line_outside"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_line"
                        android:layout_weight="1"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:background="@drawable/skin_line_bk">

                        <TextView
                            android:id="@+id/txt_org_pwd"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/padding_inside"
                            android:paddingEnd="0dp"
                            android:text="@string/original_password"
                            android:textColor="@color/text_content"
                            android:textSize="@dimen/size_content" />

                        <com.rejuvee.smartelectric.family.widget.ClearEditText
                            android:id="@+id/edit_org_pwd"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:digits="@string/input_digits"
                            android:inputType="textPassword"
                            android:maxLength="12"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/padding_inside"
                            android:paddingRight="@dimen/padding_inside"
                            android:textColor="@color/skin_edt"
                            android:textColorHint="@color/text_content"
                            android:textSize="@dimen/size_content"
                            tools:ignore="NestedWeights" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_org_pwd"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_line_inside"
                        android:scaleType="center"
                        android:src="@drawable/check_ok"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_wrong_orgpwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_message"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/padding_inside"
                    android:paddingEnd="0dp"
                    android:text="@string/hint_org_password"
                    android:textColor="@color/skin_wrong_msg"
                    android:textSize="@dimen/size_message"
                    android:visibility="gone" />
            </LinearLayout>
            <!-- 密码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_line_outside"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_line"
                        android:layout_weight="1"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:background="@drawable/skin_line_bk">

                        <TextView
                            android:id="@+id/txt_mark_pwd"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/padding_inside"
                            android:paddingEnd="0dp"
                            android:text="@string/new_password"
                            android:textColor="@color/text_content"
                            android:textSize="@dimen/size_content" />

                        <com.rejuvee.smartelectric.family.widget.ClearEditText
                            android:id="@+id/edit_pwd"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:digits="@string/input_digits"
                            android:inputType="textPassword"
                            android:maxLength="12"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/padding_inside"
                            android:paddingRight="@dimen/padding_inside"
                            android:textColor="@color/skin_edt"
                            android:textColorHint="@color/text_content"
                            android:textSize="@dimen/size_content"
                            tools:ignore="NestedWeights" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_pwd"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_line_inside"
                        android:scaleType="center"
                        android:src="@drawable/check_ok"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_wrong_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_message"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/padding_inside"
                    android:paddingEnd="0dp"
                    android:text="@string/hint_password"
                    android:textColor="@color/skin_wrong_msg"
                    android:textSize="@dimen/size_message"
                    android:visibility="gone" />
            </LinearLayout>
            <!-- 确认密码 -->
            <LinearLayout
                android:id="@+id/ll_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_line_outside"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_line"
                        android:layout_weight="1"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:background="@drawable/skin_line_bk">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/padding_inside"
                            android:paddingEnd="0dp"
                            android:text="@string/mark_repassword"
                            android:textColor="@color/text_content"

                            android:textSize="@dimen/size_content" />

                        <com.rejuvee.smartelectric.family.widget.ClearEditText
                            android:id="@+id/edit_repwd"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:digits="@string/input_digits"
                            android:inputType="textPassword"
                            android:maxLength="12"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/padding_inside"
                            android:paddingRight="@dimen/padding_inside"
                            android:textColor="@color/skin_edt"
                            android:textColorHint="@color/text_content"
                            android:textSize="@dimen/size_content"
                            tools:ignore="NestedWeights" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_repwd"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_line_inside"
                        android:scaleType="center"
                        android:src="@drawable/check_ok"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_wrong_repwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_message"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/padding_inside"
                    android:paddingEnd="0dp"
                    android:text="@string/hint_repassword"
                    android:textColor="@color/skin_wrong_msg"
                    android:textSize="@dimen/size_message"
                    android:visibility="gone" />
            </LinearLayout>
            <!--注册&确定-->

            <TextView
                android:id="@+id/txt_sure"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_line"
                android:layout_marginTop="@dimen/margin_line_outside"
                android:layout_marginBottom="@dimen/margin_fringe"
                android:background="@drawable/login_btn"
                android:gravity="center"
                android:text="@string/mark_sure"
                android:textColor="@color/white"
                android:textSize="@dimen/size_sure" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
