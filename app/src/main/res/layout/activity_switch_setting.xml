<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.mswitch.SwitchSettingActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="16dp"
            android:src="@drawable/main_fanhui" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="安全设置"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadeScrollbars="false"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="31dp"
            android:paddingEnd="31dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/line_set_electricity"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_sp1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/input_edit_bg"
                    android:digits="0123456789"
                    android:gravity="end"
                    android:hint="请输入"
                    android:inputType="numberDecimal"
                    android:maxLength="3"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="12sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/slices"
                android:contentDescription="slices" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="@integer/tag_1"
                        android:text="@string/line_set_over"
                        android:textColor="@color/black"
                        android:textSize="12sp" />


                    <com.rejuvee.smartelectric.family.custom.AmountView
                        android:id="@+id/amount_view_gy"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        app:btnTextSize="15sp"
                        app:btnWidth="36dp"
                        app:tvWidth="50dp" />
                </LinearLayout>

                <com.jaygoo.widget.RangeSeekBar
                    android:id="@+id/seek_bar_gy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    app:rsb_gravity="center"
                    app:rsb_indicator_arrow_size="5dp"
                    app:rsb_indicator_background_color="#6C7298"
                    app:rsb_indicator_height="20dp"
                    app:rsb_indicator_radius="2dp"
                    app:rsb_indicator_show_mode="alwaysShow"
                    app:rsb_indicator_text_size="10sp"
                    app:rsb_indicator_width="30dp"
                    app:rsb_mode="single"
                    app:rsb_progress_color="#6C7298"
                    app:rsb_tick_mark_layout_gravity="bottom"
                    app:rsb_tick_mark_mode="number" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/slices"
                android:contentDescription="slices" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="@integer/tag_1"
                        android:text="@string/line_set_under"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <com.rejuvee.smartelectric.family.custom.AmountView
                        android:id="@+id/amount_view_qy"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        app:btnTextSize="15sp"
                        app:btnWidth="36dp"
                        app:tvWidth="50dp" />
                </LinearLayout>

                <com.jaygoo.widget.RangeSeekBar
                    android:id="@+id/seek_bar_qy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    app:rsb_gravity="center"
                    app:rsb_indicator_arrow_size="5dp"
                    app:rsb_indicator_background_color="#6C7298"
                    app:rsb_indicator_height="20dp"
                    app:rsb_indicator_radius="2dp"
                    app:rsb_indicator_show_mode="alwaysShow"
                    app:rsb_indicator_text_size="10sp"
                    app:rsb_indicator_width="30dp"
                    app:rsb_mode="single"
                    app:rsb_progress_color="#6C7298"
                    app:rsb_tick_mark_layout_gravity="bottom"
                    app:rsb_tick_mark_mode="number" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/slices"
                android:contentDescription="slices" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/line_set_electricity1"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_dl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_edit_bg"
                    android:digits="0123456789."
                    android:gravity="end"
                    android:hint="请输入"
                    android:inputType="numberDecimal"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/slices"
                android:contentDescription="slices" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/line_set_electricity2"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_dl2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_edit_bg"
                    android:digits="0123456789."
                    android:gravity="end"
                    android:hint="请输入"
                    android:inputType="numberDecimal"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:singleLine="true"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/slices"
                android:contentDescription="slices" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="@integer/tag_1"
                        android:text="漏电流阀值"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <com.rejuvee.smartelectric.family.custom.AmountView
                        android:id="@+id/amount_view_ldl"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        app:btnTextSize="15sp"
                        app:btnWidth="36dp"
                        app:tvWidth="50dp" />
                </LinearLayout>

                <com.jaygoo.widget.RangeSeekBar
                    android:id="@+id/seek_bar_ldl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    app:rsb_gravity="center"
                    app:rsb_indicator_arrow_size="5dp"
                    app:rsb_indicator_background_color="#6C7298"
                    app:rsb_indicator_height="20dp"
                    app:rsb_indicator_radius="2dp"
                    app:rsb_indicator_show_mode="alwaysShow"
                    app:rsb_indicator_text_size="10sp"
                    app:rsb_indicator_width="30dp"
                    app:rsb_mode="single"
                    app:rsb_progress_color="#6C7298"
                    app:rsb_tick_mark_layout_gravity="bottom"
                    app:rsb_tick_mark_mode="number" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/slices"
                android:contentDescription="slices" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/tag_1"
                    android:text="漏电自检"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/iv_switch_ld"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/yk_hezha" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/slices"
                android:contentDescription="slices" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/tag_1"
                    android:text="漏电自检时间"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/iv_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/jinru" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/slices"
                android:contentDescription="slices" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="高温阀值"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_gwfz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_edit_bg"
                    android:digits="0123456789."
                    android:gravity="end"
                    android:hint="请输入"
                    android:inputType="numberDecimal"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/slices"
                android:contentDescription="slices" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="@integer/tag_1"
                        android:text="三相不平衡"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <com.rejuvee.smartelectric.family.custom.AmountView
                        android:id="@+id/amount_view_sxbph"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        app:btnTextSize="14sp"
                        app:btnWidth="36dp"
                        app:tvWidth="50dp" />
                </LinearLayout>

                <com.jaygoo.widget.RangeSeekBar
                    android:id="@+id/seek_bar_sxbph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    app:rsb_gravity="center"
                    app:rsb_indicator_arrow_size="5dp"
                    app:rsb_indicator_background_color="#6C7298"
                    app:rsb_indicator_height="20dp"
                    app:rsb_indicator_radius="2dp"
                    app:rsb_indicator_show_mode="alwaysShow"
                    app:rsb_indicator_text_size="10sp"
                    app:rsb_indicator_width="30dp"
                    app:rsb_mode="single"
                    app:rsb_progress_color="#6C7298"
                    app:rsb_tick_mark_layout_gravity="bottom"
                    app:rsb_tick_mark_mode="number" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/slices"
                android:contentDescription="slices" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="@integer/tag_1"
                        android:text="故障电弧"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <com.rejuvee.smartelectric.family.custom.AmountView
                        android:id="@+id/amount_view_gzdh"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        app:btnTextSize="14sp"
                        app:btnWidth="36dp"
                        app:tvWidth="50dp" />
                </LinearLayout>

                <com.jaygoo.widget.RangeSeekBar
                    android:id="@+id/seek_bar_gzdh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    app:rsb_gravity="center"
                    app:rsb_indicator_arrow_size="5dp"
                    app:rsb_indicator_background_color="#6C7298"
                    app:rsb_indicator_height="20dp"
                    app:rsb_indicator_radius="2dp"
                    app:rsb_indicator_show_mode="alwaysShow"
                    app:rsb_indicator_text_size="10sp"
                    app:rsb_indicator_width="30dp"
                    app:rsb_mode="single"
                    app:rsb_progress_color="#6C7298"
                    app:rsb_tick_mark_layout_gravity="bottom"
                    app:rsb_tick_mark_mode="number" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/slices"
                android:contentDescription="slices" />
        </LinearLayout>

    </ScrollView>

    <com.base.library.widget.SuperTextView
        android:id="@+id/stv_commit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/qd1"
        android:gravity="center"
        android:text="@string/sce_wancheng"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:corner="8dp" />
</LinearLayout>


