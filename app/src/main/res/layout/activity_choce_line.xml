<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="presenter"
            type="com.rejuvee.smartelectric.family.activity.scene.ChoceLineActivity.Presenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:context=".activity.scene.ChoceLineActivity">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <ImageView
                android:id="@+id/img_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="16dp"
                android:src="@drawable/main_fanhui" />

            <TextView
                android:id="@+id/type_yaokong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vs81"
                android:textSize="12sp" />
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/vs82"
                android:textColor="@color/black"
                android:textSize="18sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/tag_1"
                android:text="@string/vs82"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/text_choceall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/img_unchose"
                android:drawablePadding="5dp"
                android:onClick="@{presenter::onChoseAll}"
                android:padding="16dp"
                android:text="@string/sce_choceall"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <GridView
            android:id="@+id/grid_device"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:horizontalSpacing="10dp"
            android:listSelector="#00000000"
            android:numColumns="4"
            android:paddingStart="0dp"
            android:paddingTop="20dp"
            android:paddingEnd="10dp"
            android:paddingBottom="20dp"
            android:scrollbars="none"
            android:verticalSpacing="10dp" />

        <com.base.library.widget.SuperTextView
            android:id="@+id/bu_wancheng"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/qd1"
            android:gravity="center"
            android:onClick="@{presenter::onCommit}"
            android:text="@string/sce_wancheng"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>
</layout>
