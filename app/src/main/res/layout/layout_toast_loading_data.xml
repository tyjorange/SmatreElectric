<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:gravity="center" 
    android:orientation="horizontal" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_toast_with_corner_rectangle" 
    android:paddingLeft="@dimen/toast_text_padding_left_right" 
    android:paddingTop="@dimen/toast_text_padding_top" 
    android:paddingRight="@dimen/toast_text_padding_left_right" 
    android:paddingBottom="@dimen/toast_text_padding_bottom" 
  	xmlns:android="http://schemas.android.com/apk/res/android">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@anim/anim_loading" />
    <TextView 
        android:textSize="16.0sp" 
        android:textColor="@android:color/darker_gray" 
        android:gravity="center" 
        android:id="@+id/txt_tip" 
        android:paddingTop="22.0dip" 
        android:paddingBottom="22.0dip" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginLeft="5.0dip" 
        android:text="@string/loading" />
</LinearLayout>