<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/while_text_color"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_global_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:textColor="@color/text_base_color_666"
            android:textSize="@dimen/global_base_text_size_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="1.0">

            <TextView
                android:id="@+id/activity_global_dialog_btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/global_base_padding_10"
                android:layout_marginRight="@dimen/global_base_padding_10"
                android:layout_weight="0.5"
                android:background="@drawable/global_btn_ng_confirm_selector"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/global_base_padding_10"
                android:paddingTop="@dimen/global_base_padding_10"
                android:textColor="@color/text_base_color_666"
                android:textSize="@dimen/global_base_text_size_14" />

            <TextView
                android:id="@+id/activity_global_dialog_btn_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/global_base_padding_10"
                android:layout_marginRight="@dimen/global_base_padding_10"
                android:layout_weight="0.5"
                android:background="@drawable/global_btn_ng_confirm_selector"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/global_base_padding_10"
                android:paddingTop="@dimen/global_base_padding_10"
                android:textColor="@color/text_base_color_666"
                android:textSize="@dimen/global_base_text_size_14" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>