<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:background="@color/backgroud_while_bg"
        android:orientation="vertical">
        <TextView
            android:id="@+id/dialog_message_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:text=""
            android:textColor="@color/text_base_color_333"
            android:textSize="@dimen/global_base_text_size_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:weightSum="1.0">


            <TextView
                android:id="@+id/dialog_message_btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/global_base_padding_10"
                android:layout_marginRight="@dimen/global_base_padding_10"
                android:layout_weight="0.5"
                android:background="@drawable/btn_gray_selector"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/global_base_padding_10"
                android:paddingTop="@dimen/global_base_padding_10"
                android:textColor="@color/text_base_color_333"
                android:textSize="@dimen/global_base_text_size_14" />
            <TextView
                android:id="@+id/dialog_message_btn_confim"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/global_base_padding_10"
                android:layout_marginRight="@dimen/global_base_padding_10"
                android:layout_weight="0.5"
                android:background="@drawable/btn_selector"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/global_base_padding_10"
                android:paddingTop="@dimen/global_base_padding_10"
                android:textColor="@color/while_text_color"
                android:textSize="@dimen/global_base_text_size_14" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>