<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="1dp"
        android:left="-1dp"
        android:right="-1dp"
        android:top="-1dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1px"
                android:color="#ffffff" />

            <solid android:color="#ffffff" />

            <padding
                android:bottom="15dp"
                android:left="5dp"
                android:right="5dp"
                android:top="15dp" />
            <corners android:radius="0dp" />
        </shape>
    </item>

</layer-list>