<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="45.0"
                android:centerColor="#ffFCFCFC"
                android:endColor="#ffFCFCFC"
                android:startColor="#ffFCFCFC" />

            <stroke
                android:width="1.0dp"
                android:color="#ffFCFCFC" />
        </shape>
    </item>
    <item
        android:bottom="1.0dp"
        android:left="1.0dp"
        android:right="1.0dp"
        android:top="1.0dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="45.0"
                android:centerColor="#ffFCFCFC"
                android:endColor="#ffFCFCFC"
                android:startColor="#ffFCFCFC" />
        </shape>
    </item>

</layer-list>